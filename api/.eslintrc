{
    "extends": ["prettier"],
    "plugins": ["prettier"],
    "rules": {
        "brace-style": 0,
        "arrow-parens": 0,
        // all prettier file errors
        "prettier/prettier": "error"
    },
    "globals": {
        "window": true,
        "document": true,
        "localStorage": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".ts", ".tsx"]
            }
        }
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser"
}
