{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.{spec,test}.{ts,tsx}"]
}
